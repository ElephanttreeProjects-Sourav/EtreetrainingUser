@model EtreetrainingUser.Models.Tbl_Video

@{
    ViewBag.Title = "Vid_Edit";
}
<br /><br /><br /><br />
<h2>Video Editing</h2>


@using (Html.BeginForm("Vid_Edit", "Training_main", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Video_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Video_id, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
                @Html.ValidationMessageFor(model => model.Video_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Video_Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Video_Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Video_Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Video_Path, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.Video_Path, new { htmlAttributes = new { @class = "form-control" } })*@
                <div id="videoContainer" style="text-align:left; padding-top:0%">
                    <video id="vid" name="VidFile" controls src="@Url.Content(Model.Video_Path)" typeof="video/mp4" width="550" height="350">
                        @*<source src="@Url.Content(Model.Video_Path)" type="video/mp4" width="50" height="1000">*@
                        @*<video src="@Url.Content(Model.Video_Path)" typeof="video/mp4" width="1250" height="1250" />*@
                        <source src="this-is-my-movie.ogv" />
                    </video>
                    <input type="file" name="VidFile" />
                </div>
                @Html.ValidationMessageFor(model => model.Video_Path, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Vid_AllView")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
