        <span aria-hidden="true">&times;</span>
    </button>

    <div style="padding: 5px 15px 5px 30px;">
        @*<button id="submitforvideo" type="button" style="width:80px;margin-top:20px ; float:right;padding:5px 5px 5px 5px" class="btn btn-success"><i class="fas fa-save"></i></button>*@
        <label style="float:left;color:white;padding:10px 10px 10px 10px">Price </label>
