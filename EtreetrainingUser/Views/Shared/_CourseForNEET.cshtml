    Layout = null;
}
@if (Model.Count() != 0)
{ 
using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
{

    @*@Html.AntiForgeryToken()*@


    <label style="text-align:center;color:white;padding:10px 0px 0px 0px">Videos for NEET </label>
